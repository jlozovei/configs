{
  "auto_format_on_save": true,
  "auto_format_on_save_excludes": [
    "*/node_modules/*",
    "*.json",
    "*.md",
    "*.html"
  ],
  "prettier_options": {
    "printWidth": 70,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
